{
  "extends": [
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "es6": true
  },
  "rules": {
    "prettier/prettier": ["error", {
      // Facebook style
      "singleQuote": true,
      "trailingComma": "all",
      "bracketSpacing": false,
      "jsxBracketSameLine": true,
      "parser": "flow",

      "printWidth": 120
    }]
  }
}
